{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES6",
		"esModuleInterop": true,
		"strict": true,
		"strictNullChecks": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"moduleResolution": "Node",
		"noImplicitAny": true,
		"skipLibCheck": true,
		"outDir": "dist"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	"ts-node": {
		"transpileOnly": true
	}
}
